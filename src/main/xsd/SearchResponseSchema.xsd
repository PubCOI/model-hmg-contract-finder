<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://schemas.pubcoi.org/cf/SearchResponseSchema"
           xmlns:ns="http://schemas.pubcoi.org/cf/SearchResponseSchema"
           xmlns:cf="http://schemas.pubcoi.org/cf/ContractFinderSchema"
           attributeFormDefault="qualified"
           elementFormDefault="qualified">

    <xs:import schemaLocation="ContractFinderSchema.xsd" namespace="http://schemas.pubcoi.org/cf/ContractFinderSchema"/>

    <xs:element name="NoticeSearchResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="ByRegion">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Items">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="KeyValuePairOfstringlong" type="ns:KVPType" minOccurs="0"
                                                    maxOccurs="unbounded"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="Other" type="xs:int"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ByStatus">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Items">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="KeyValuePairOfNullableOfNoticeStatus" type="ns:KVPType"
                                                    minOccurs="0" maxOccurs="unbounded"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="Other" type="xs:int"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ByType">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Items">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="KeyValuePairOfNullableOfNoticeType" type="ns:KVPType"
                                                    minOccurs="0" maxOccurs="unbounded"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="Other" type="xs:int"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="HitCount" type="xs:int"/>
                <xs:element name="MaxHits" type="xs:int"/>
                <xs:element name="NoticeList">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="HitOfNoticeIndex" type="ns:NoticeHitType" minOccurs="0"
                                        maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="KVPType">
        <xs:sequence>
            <xs:element name="key" type="xs:token"/>
            <xs:element name="value" type="xs:int"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="NoticeHitType">
        <xs:sequence>
            <xs:element name="Item" type="cf:NoticeIndex"/>
            <xs:element name="Score" type="xs:float"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>